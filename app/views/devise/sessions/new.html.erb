<h2 class="page_title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class:"form" }) do |f| %>
  <div class="form_field">
    <%= f.label :email, :class => "label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "input-field" %>
  </div>

  <div class="form_field">
    <%= f.label :password, :class => "label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", :class => "input-field"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form_field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", :class => "submit-btn"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
