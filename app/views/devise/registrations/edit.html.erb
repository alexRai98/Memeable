<h2 class= "page_title">Edit my account</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class:"form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form_field">
    <%= f.label :username, :class => "label"%><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", :class => "input-field" %>
  </div>

  <div class="form_field">
    <%= f.label :email, :class => "label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "input-field" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form_field">
    <%= f.label :password , :class => "label"%> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => "input-field" %>
    <% if @minimum_password_length>0%>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form_field">
    <%= f.label :password_confirmation, :class => "label"%><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "input-field" %>
  </div>

  <div class="form_field">
    <%= f.label :current_password, :class => "label" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", :class => "input-field"%>
  </div>

  <div class="actions">
    <%= f.submit "Update", :class => "submit-btn" %>
  </div>
<% end %>


<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , :class=> "submit-btn cancel-btn"%>


